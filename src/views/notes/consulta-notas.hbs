
<link rel="stylesheet" type="text/css" href="/css/main.css"> 
<div class="container">
    <div class="row">
    {{#each notas}}
    <div class="col-md-3 mb-3">
        <div class="card text-dark bg-light border-info mb-3">
            <div class="card-header bg-success"> 
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{titulo}}
                    <a href="/notes/edit:{{_id}}"><i class="fas fa-edit m-2"></i>
                    </a>
                    <a href="/notes/delete:{{_id}}"><i class="fas fa-trash"></i></a>
                </h4>
            </div>
            <div class="card-body"> 
                <p>{{description}}</p>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hola {{usuario.nombre}}</h1>
            <p class="lead">No hay notas en la base de datos.</p>
            <a href="/notes/add" class="btn btn-success btn-block">Crear nueva nota!</a>
        </div>
    </div>
    {{/each}}
    </div>

    <div class="row abs-center">
            {{#if pages}}
            <nav class=" abs-center"><!--mx-auto-->
                <ul class="pagination ">
                    {{#equal current 1}}
                    <li class="page-item disabled mr-1">
                        <a href="#" class="page-link">Inicio</a>
                    </li>
                    {{else}}
                    <li class="page-item mr-1">
                        <a href="/notes/1" class="page-link"> Inicio</a>
                    </li>
                    {{/equal}}

                    {{#for current pages}}
                    {{{this}}}
                    {{/for}}

                     {{#equal current pages}}
                    <li class="page-item disabled ">
                        <a href="#" class="page-link">Fin</a>
                    </li>
                    {{else}}
                    <li class="page-item">
                        <a href="/notes/{{pages}}" class="page-link"> Fin</a>
                    </li>
                    {{/equal}}                    

                </ul>
            </nav>
            {{/if}}
    </div>

</div>

