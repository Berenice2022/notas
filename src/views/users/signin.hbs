<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h1>Login</h1>
            </div>
            <img src="/img/logo.png" class="rounded-circle mx-auto d-block m-4 logo" alt="logo"></img>
                <form action="/users/signin" method="POST">
                <div class="form-group">
                    <input type="email" 
                           class="form-control" 
                           name="email"
                           placeholder="Intrduzca su email"
                           autofocus="">
                </div>
                <div class="form-group">
                    <input type="password" 
                           class="form-control" 
                           name="password"
                           placeholder="Intrduzca su password"
                           autofocus="">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-success" autofocus="">Ingresar</button>
                </div>
            </form>
        </div>
    </div>
</div>