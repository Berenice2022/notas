<div class="row mb-5">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Registro de usuario
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="nombre"
                    placeholder="Intrduzca su nombre"
                    value="{{nombre}}">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email"
                    placeholder="Intrduzca su email"
                     value="{{email}}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password"
                    placeholder="Intrduzca su contraseña"
                     value="{{password}}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="confirmarpassword"
                    placeholder="Confirme la contraseña"
                     value="{{confirmarpassword}}">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary
                     btn-block" values="Registrar">Registrar</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>